<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chirag.loginregister.LoginActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/wifriendsText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Build your Wi-Friends Network "
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbackground"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search to Make WiFriends"
        android:id="@+id/searchFriends"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_red_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Your WiFriends"
        android:id="@+id/viewFriend"
        android:layout_below="@+id/searchFriends"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_red_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Profile"
        android:id="@+id/backToProfileFromSearch"
        android:layout_below="@+id/viewFriend"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_red_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/bLogout"
            android:layout_below="@+id/backToProfileFromSearch"
            android:textColor="#323232"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_yellow_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
</RelativeLayout>
    </RelativeLayout>
