<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tejasshah.wifriends.AddNetworkActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNetworkName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Wi-FI Name"
        android:textColorHint="@color/colorBlueDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNetworkPassword"
        android:layout_alignRight="@+id/etNetworkName"
        android:layout_alignEnd="@+id/etNetworkName"
        android:layout_below="@+id/etNetworkName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Wi-Fi Password"
        android:textColorHint="@color/colorBlueDark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSaveNetwork"
        android:id="@+id/bSaveNetwork"
        android:layout_below="@+id/etNetworkPassword"
        android:layout_alignRight="@+id/etNetworkPassword"
        android:layout_alignEnd="@+id/etNetworkPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_blue_button"
        android:textColor="#fff"
        android:textSize="20sp" />
</RelativeLayout>
